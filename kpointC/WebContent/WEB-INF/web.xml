<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
>
  <filter>
    <filter-name>StripesFilter</filter-name>
    <filter-class>net.sourceforge.stripes.controller.StripesFilter</filter-class>
    <init-param>
      <param-name>ActionResolver.Packages</param-name>
      <param-value>org.webdev.kpoint.action</param-value>
    </init-param>
	<init-param>
		<param-name>Interceptor.Classes</param-name>
			<param-value>
                org.webdev.kpoint.interceptor.SecurityInterceptor,
                org.webdev.kpoint.interceptor.XssInterceptor,
                org.webdev.kpoint.interceptor.LoggingInterceptor
			</param-value>
	</init-param>
    <init-param>
      <param-name>Extension.Packages</param-name>
      <param-value>
        org.webdev.kpoint.extensions
      </param-value>
    </init-param>
	<init-param>
    	<param-name>ExceptionHandler.Class</param-name>
    	<param-value>org.webdev.kpoint.exception.KinekExceptionHandler</param-value>
	</init-param>
	<init-param>
        <param-name>FileUpload.MaximumPostSize</param-name>
        <param-value>5M</param-value>
    </init-param>
      <!-- Set this value to false before deployment in production! -->
    <init-param>
      <param-name>Stripes.DebugMode</param-name>
      <param-value>true</param-value>
    </init-param>
    
  </filter>
 
  <servlet>
    <servlet-name>ConfigurationReader</servlet-name>
    <servlet-class>org.webdev.kpoint.util.ConfigurationReader</servlet-class>
        <init-param>
            <param-name>path</param-name>
            <param-value>../</param-value>
        </init-param>
        <init-param>
            <param-name>logback_filename</param-name>
            <param-value>logback.kpointc.xml</param-value>
        </init-param>
    <load-on-startup>1</load-on-startup>   
  </servlet> 
  
  <servlet>
    <servlet-name>DispatcherServlet</servlet-name>
    <servlet-class>
      net.sourceforge.stripes.controller.DispatcherServlet
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
  	<description>
  	</description>
  	<display-name>ActivityReminderMonitor</display-name>
  	<servlet-name>ActivityReminderMonitor</servlet-name>
  	<servlet-class>org.webdev.kpoint.monitor.ActivityReminderMonitor</servlet-class>
  </servlet>
  <servlet>
  	<description>
  	</description>
  	<display-name>TrackingUpdatesMonitor</display-name>
  	<servlet-name>TrackingUpdatesMonitor</servlet-name>
  	<servlet-class>org.webdev.kpoint.monitor.TrackingUpdatesMonitor</servlet-class>
  </servlet>
  <servlet>
  	<description>
  	</description>
  	<display-name>TrackPackageMonitor</display-name>
  	<servlet-name>TrackPackageMonitor</servlet-name>
  	<servlet-class>org.webdev.kpoint.monitor.TrackPackageMonitor</servlet-class>
  </servlet>
  <servlet>
  	<description>
  	</description>
  	<display-name>EmailTester</display-name>
  	<servlet-name>EmailTester</servlet-name>
  	<servlet-class>org.webdev.kpoint.util.EmailTester</servlet-class>
  </servlet>
   
<servlet>
        <servlet-name>jcaptcha</servlet-name>
        <servlet-class>com.octo.captcha.module.servlet.image.SimpleImageCaptchaServlet</servlet-class>
</servlet>
<servlet-mapping>
        <servlet-name>jcaptcha</servlet-name>
        <url-pattern>/jcaptcha.jpg</url-pattern>
</servlet-mapping>

  <filter-mapping>
    <filter-name>StripesFilter</filter-name>
    <servlet-name>DispatcherServlet</servlet-name>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>

  <servlet-mapping>
    <servlet-name>DispatcherServlet</servlet-name>
    <url-pattern>*.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ActivityReminderMonitor</servlet-name>
  	<url-pattern>/ActivityReminderMonitor</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>TrackingUpdatesMonitor</servlet-name>
  	<url-pattern>/TrackingUpdatesMonitor</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>TrackPackageMonitor</servlet-name>
  	<url-pattern>/TrackPackageMonitor</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>EmailTester</servlet-name>
  	<url-pattern>/EmailTester</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>

